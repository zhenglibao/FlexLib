<?xml version="1.0" encoding="utf-8"?>
<UIView name="mainView"
    layout="
    flex:1,
    justifyContent:center,
    alignItems:center"
    attr="bgColor:white">
    <UIView layout="height:1,width:*50%" attr="bgColor:red"/>
    <FlexScrollView name="_scroll" layout="flex:1,width:100%,alignItems:center" attr="vertScroll:true">
        <UILabel name="_label" layout="marginTop:*20"
        attr="@:system/buttonText,text:You can run on iPhoneX,color:blue"/>
        
        <UILabel name="_label" layout="marginTop:20"
        attr="@:system/buttonText,text:@multilangdemo,linesNum:0,color:blue"/>
        
        <UIView layout="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onControls" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:Controls"/>
            </FlexTouchView>
            <FlexTouchView onPress="onTestTable:" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:TableView"/>
            </FlexTouchView>
        </UIView>
        <UIView layout="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onTestScrollView:" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:ScrollView"/>
            </FlexTouchView>
            <FlexTouchView onPress="onTestModalView:" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:ModalView"/>
            </FlexTouchView>
        </UIView>

        <UIView layout="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onTestLoginView:" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:FlexTouchView"/>
            </FlexTouchView>
            <FlexTouchView onPress="onCollectionView" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:CollectionView"/>
            </FlexTouchView>
        </UIView>

       <UIView layout="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onTextView:" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:Forms"/>
            </FlexTouchView>
            <FlexTouchView onPress="onViewLayouts:" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:Layouts"/>
            </FlexTouchView>
        </UIView>

       <UIView layout="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onFrameVC" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel
                attr="@:system/buttonText,text:FrameVC"/>
            </FlexTouchView>
            <FlexTouchView onPress="onExplorerFlex" layout="@:system/button" attr="@:system/buttonAttr">
                <UILabel class="buttonText"
                attr="text:Online Flex Explorer"/>
            </FlexTouchView>
        </UIView>

       <UIView layout="width:100%,flexDirection:row,justifyContent:space-around,height:">
           <FlexTouchView onPress="onFrameView" layout="@:system/button" attr="@:system/buttonAttr">
               <UILabel
               attr="@:system/buttonText,text:FrameView"/>
           </FlexTouchView>
           <FlexTouchView onPress="onPopScrollView" layout="@:system/button" attr="@:system/buttonAttr">
               <UILabel
               attr="@:system/buttonText,text:Pop ScrollView"/>
           </FlexTouchView>
       </UIView>

       

    </FlexScrollView><UIView name="bottomBtn" layout="$width:ScreenWidth*0.6,height:50,alignItems:center,justifyContent:center" attr="bgColor:#e5e5e5|white,borderRadius:6">
        <UILabel
           attr="@:system/buttonText,text:表达式计算，屏幕宽度的60%"/>
   </UIView>
</UIView> 
